<launch>

  <node pkg="nodelet" type="nodelet" name="pcl_manager" args="manager" output="screen" />

  <!-- Run a VoxelGrid filter to clean NaNs and downsample the data -->
  <node pkg="nodelet" type="nodelet" name="voxel_grid" args="load pcl/VoxelGrid pcl_manager" output="screen">
    <remap from="~input" to="/zed2/zed_node/point_cloud/cloud_registered" />
    <rosparam>
      filter_field_name: z
      filter_limit_min: -9
      filter_limit_max: 9
      filter_limit_negative: False
      leaf_size: 0.04
    </rosparam>
  </node>


  <node pkg="nodelet" type="nodelet" name="obstacles_detection" args="load rtabmap_ros/obstacles_detection pcl_manager" output="screen">
      <remap from="cloud"     to="/voxel_grid/output"/>
      <remap from="obstacles" to="/obstacles_cloud"/>
      <remap from="ground"    to="/ground_cloud"/>

<!--      <param name="Grid/FromDepth"                  type="bool"   value="False"/> -->
      <param name="frame_id"                        type="string" value="base_link"/>
      <param name="queue_size"                      type="int"    value="10"/> 
      <param name="map_frame_id"                    type="string" value="map"/>
<!--  <param name="normal_estimation_radius"        type="double" value="0.04"/> -->
      <param name="Grid/MaxGroundAngle"             type="double" value="45"/>      <!--45-->
      <param name="wait_for_transform"              type="bool"   value="true"/>
      <param name="Grid/MinClusterSize"             type="int"    value="10"/>      <!--10-->
      <param name="Grid/MaxObstacleHeight"          type="double" value="0.4"/>       <!--0.0-->
      <param name="Grid/CellSize"                   type="double" value="0.04"/>    <!--0.05-->
<!--      <param name="Grid/ClusterRadius"              type="double" value="0.08"/> -->   <!--0.1-->
<!--      <param name="Grid/RangeMax"                   type="double"    value="0.5"/> --> <!--5.0-->
      <param name="Grid/MaxGroundHeight"            type="double" value="0.03"/>    <!--0.0-->
<!--      <param name="Grid/MinGroundHeight"            type="double" value="-0.03"/> -->  <!--0.0-->
      <param name="Grid/NormalK"                    type="int"    value="20"/>      <!--20-->
      <param name="Grid/FlatObstacleDetected"       type="bool"   value="false"/>    <!--true-->
<!--      <param name="Grid/NoiseFilteringRadius"       type="double" value="5.0"/> -->    <!--0.0-->
  <!--    <param name="Grid/NoisefilteringMinNeighbors" type="int" value="8"/>  -->        <!--5-->

  </node>
</launch>
